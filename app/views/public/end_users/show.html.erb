<h1>ユーザーのマイページ</h1>
<p>画像</p>
<%= image_tag @end_user.get_profile_image(100,100) %>
<p>ユーザー名</p>
<%= @end_user.name %>

<p>お気に入り一覧</p>
件数：<%= @favorites.count %><br>
<% if @favorite_list.present? %>
  <% @favorite_list.each do |document| %>
    <%= link_to document_path(document) do %>
      <%= image_tag document.end_user.get_profile_image(100,100) %>
      <div class="box">
        <%= l document.created_at, format: :mon %>
        <%= l document.created_at, format: :daily %>
        <%= l document.created_at, format: :times %><br>

        <!--タグ-->
        <p>
          タグ：
          <% document.tags.each do |tag| %>
            ,<%= tag.name %>
          <% end %>
        </p>
        <!--記録内容-->
        <p>内容：<%= document.content %></p>
      </div>
    <% end %>
  <% end %>
<% end %>

<% if @end_user.name != "guestuser" %>
  <%= link_to "編集", edit_end_user_path(@end_user), class: "btn btn-primary edit_user_#{@end_user.id}" %>
  <%= link_to "退会", end_user_confirm_path(@end_user), class: "btn btn-danger edit_user_#{@end_user.id}" %>
<% end %>
