<div class="chart_feeling">
  <canvas id="myDoughnutChart" width="400" height="400"></canvas>
  <p class="chart_title">1ヶ月の<br>感情グラフ</p>
</div>
<script>
  var ctx = document.getElementById('myDoughnutChart').getContext('2d');
  var myDoughnutChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: ['幸せ', '怒り', '悲しみ', '普通', '疲れ'],
      datasets: [{
        label: 'データの数',
        data: [
          <%= @documents.current_happy.count %>,
          <%= @documents.current_angry.count %>, 
          <%= @documents.current_sorrow.count %>, 
          <%= @documents.current_normal.count %>, 
          <%= @documents.current_tired.count %>, 
          ],
        backgroundColor: [
          'rgba(252, 227, 138, 0.7)',
          'rgba(243, 129, 129, 0.7)',
          'rgba(165, 222, 229, 0.7)',
          'rgba(192, 255, 194, 0.7)',
          'rgba(212, 165, 165, 0.7)'
        ],
        borderColor: [
          'rgba(30, 86, 160)',
          'rgba(30, 86, 160)',
          'rgba(30, 86, 160)',
          'rgba(30, 86, 160)',
           'rgba(30, 86, 160)'
        ],
        borderWidth: 0.2
      }]
    },
    options: {
      title: {
        fontSize: 16,
        display: true,
        position: 'top',
        text: 'ドーナツ'
      },
    }
  });
</script>
