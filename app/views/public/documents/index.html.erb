<div class="container mt-5">
  <div class="row">
    <div class="col-6 offset-3 text-center">
      <h2 class="font-weight-bold">記録の一覧</h2>
    </div>
    <!--タグリスト-->
    <div class="col-10 offset-1 text-center mt-3 mb-5">
      <%= render "public/documents/tag_list", tags: @tags %>
    </div>
    <!--記録の一覧-->
    <div class="col-10 offset-1 text-left">
      <%= render "public/documents/document_card", documents: @documents %>
    </div>
    <!--ページネーション-->
    <div class="col-6 offset-3 justify-content-center mt-3 mb-5 d-flex">
      <%= paginate @documents %>
    </div>
  </div>
</div>
