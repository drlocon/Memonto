<%= form_with model: document do |f| %>
  <!--タグ投稿フォーム-->
  <div class="form-group text-left mb-5 col-8 offset-2">
    <%= f.label :tag_name, "上記のタグ、または新しいタグをつけましょう" %><br>
    <%= f.text_field :tag_name, autofocus: true, placeholder: "複数つける場合は,で区切ってください",
        value: tag_list, class: "form-control form-control-sm" %>
  </div>
  <!--感情ステータスを選択-->
  <div class="form-group text-left mt-3 col-8 offset-2">
    <p>あのの気持ちを選びましょう</p>
    <!--感情：happy-->
    <%= f.radio_button :feeling, :happy, class: "hidden_radio" %>
    <% if document.feeling == "happy" %>
      <%= f.label :feeling, class: 'feeling_icon check_radio', for: "document_feeling_happy" do %>
        <i class="radio_icon fas fa-grin"></i>
      <% end %>
    <% else %>
      <%= f.label :feeling, class: 'feeling_icon', for: "document_feeling_happy" do %>
        <i class="radio_icon fas fa-grin"></i>
      <% end %>
    <% end %>
    <!--感情：anger-->
    <%= f.radio_button :feeling, :anger, class: "hidden_radio" %>
    <% if document.feeling == "anger" %>
      <%= f.label :feeling, class: 'feeling_icon check_radio', for: "document_feeling_anger" do %>
        <i class="fas fa-angry"></i>
      <% end %>
    <% else %>
      <%= f.label :feeling, class: 'feeling_icon', for: "document_feeling_anger" do %>
        <i class="fas fa-angry"></i>
      <% end %>
    <% end %>
    <!--感情：normal-->
    <%= f.radio_button :feeling, :normal, class: "hidden_radio" %>
    <% if document.feeling == "normal" %>
      <%= f.label :feeling, class: 'feeling_icon check_radio', for: "document_feeling_normal" do %>
        <i class="fas fa-meh"></i>
      <% end %>
    <% else %>
      <%= f.label :feeling, class: 'feeling_icon', for: "document_feeling_normal" do %>
        <i class="fas fa-meh"></i>
      <% end %>
    <% end %>
    <!--感情：sorrow-->
    <%= f.radio_button :feeling, :sorrow, class: "hidden_radio" %>
    <% if document.feeling == "sorrow" %>
      <%= f.label :feeling, class: 'feeling_icon check_radio', for: "document_feeling_sorrow" do %>
        <i class="fas fa-sad-tear"></i>
      <% end %>
    <% else %>
      <%= f.label :feeling, class: 'feeling_icon', for: "document_feeling_sorrow" do %>
        <i class="fas fa-sad-tear"></i>
      <% end %>
    <% end %>
    <!--感情：tired-->
    <%= f.radio_button :feeling, :tired, class: "hidden_radio" %>
    <% if document.feeling == "tired" %>
      <%= f.label :feeling, class: 'feeling_icon check_radio', for: "document_feeling_tired" do %>
        <i class="fas fa-tired"></i>
      <% end %>
    <% else %>
      <%= f.label :feeling, class: 'feeling_icon', for: "document_feeling_tired" do %>
        <i class="fas fa-tired"></i>
      <% end %>
    <% end %>
  </div>
  <!--記録投稿フォーム-->
  <div class="form-group text-left mt-4 col-8 offset-2">
    <%= f.label :content, "記録の詳細を書きましょう" %><br>
    <%= f.text_area :content, rows: "7", placeholder: "入力は必須です", class: "form-control form-control-sm" %>
  </div>
  <!--ボタン-->
  <div class="form-group mt-5 mb-5">
    <%= f.submit "更新する", class: "btn btn-outline-info rounded-pill w-50 mt-1" %>
  </div>
<% end %>
